<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/dark_green</item>
        <item name="colorAccent">@color/accent_green</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:textColorSecondary">@color/text_second_color_primary</item>
        <!--<item name="android:popupBackground">@color/dark_green</item>-->
        <!--窗口背景颜色-->
        <item name="android:windowBackground">@color/dark_green</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextView</item>
        <item name="popupTheme">@style/popupTheme</item>
        <item name="popupMenuStyle">@style/popupMenuStyle</item>

        <item name="android:activatedBackgroundIndicator">@drawable/activated_background</item>
        <item name="selectableItemBackground">@drawable/selectable_background</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/transparent</item>
    </style>

    <style name="AutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <!--<item name="android:textColor">@android:color/white</item>-->
        <item name="android:background">@null</item>
        <!--<item name="android:textColorHint">@android:color/white</item>-->
    </style>

    <style name="popupTheme" parent="AppTheme">
        <!--弹出菜单文本的颜色-->
        <item name="android:textColor">@android:color/white</item>
        <!--菜单背景颜色-->
        <item name="android:background">@color/green</item>
    </style>

    <style name="popupMenuStyle" parent="Base.Widget.AppCompat.PopupMenu.Overflow">

    </style>

    <style name="ToolbarTheme" parent="AppTheme">
        <!--文本颜色-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--图标遮罩颜色-->
        <item name="android:textColorSecondary">@android:color/white</item>
        <!--光标的颜色-->
        <item name="colorControlActivated">@android:color/white</item>
        <!--提示文本的颜色-->
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabLayoutTextStyle</item>
    </style>z

    <style name="TranDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <!--点击窗口外,不消失-->
        <item name="android:backgroundDimEnabled">false</item>
        <!--禁用模糊背景-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--可以不要 -->
        <item name="android:windowFrame">@null</item>
        <!--可以不要-->
        <item name="android:background">#00000000</item>
        <!--可以不要-->
    </style>
</resources>
